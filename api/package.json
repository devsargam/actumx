{
  "name": "api",
  "version": "1.0.50",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "check": "tsc --noEmit",
    "db:app:generate": "drizzle-kit generate --config=drizzle.app.config.ts",
    "db:app:migrate": "drizzle-kit migrate --config=drizzle.app.config.ts",
    "db:auth:generate": "drizzle-kit generate --config=drizzle.auth.config.ts",
    "db:auth:migrate": "drizzle-kit migrate --config=drizzle.auth.config.ts",
    "db:generate": "bun run db:auth:generate && bun run db:app:generate",
    "db:migrate": "bun run db:auth:migrate && bun run db:app:migrate"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/openapi": "^1.4.14",
    "better-auth": "^1.4.18",
    "drizzle-orm": "^0.45.1",
    "elysia": "latest",
    "pg": "^8.18.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/pg": "^8.16.0",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.9",
    "typescript": "^5.9.3"
  },
  "module": "src/index.js"
}
